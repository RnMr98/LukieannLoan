@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="w-100 text-center">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-12">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="fst-italic">Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="d-inline-flex justify-content-between w-100 gap-3 mb-3">
                <div class="form-floating w-100">
                    <input asp-for="Input.FirstName" class="form-control" aria-required="true" />
                    <label asp-for="Input.FirstName"></label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating w-100">
                    <input asp-for="Input.MiddleName" class="form-control" aria-required="true" />
                    <label asp-for="Input.MiddleName"></label>
                    <span asp-validation-for="Input.MiddleName" class="text-danger"></span>
                </div>
                <div class="form-floating w-100">
                    <input asp-for="Input.LastName" class="form-control" aria-required="true" />
                    <label asp-for="Input.LastName"></label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="d-inline-flex justify-content-between w-100 gap-3 mb-3">
                <div class="form-floating w-100">
                    <input asp-for="Input.TRN" class="form-control" aria-required="true" />
                    <label asp-for="Input.TRN"></label>
                    <span asp-validation-for="Input.TRN" class="text-danger"></span>
                </div>
                <div class="form-floating w-100">
                    <input asp-for="Input.DateOfBirth" class="form-control" aria-required="true" />
                    <label asp-for="Input.DateOfBirth"></label>
                    <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                </div>
            </div>

            <div class="d-inline-flex justify-content-between w-100 gap-3 mb-3">
                <div class="form-floating w-100">
                    <input asp-for="Input.Address1" class="form-control" aria-required="true" />
                    <label asp-for="Input.Address1"></label>
                    <span asp-validation-for="Input.Address1" class="text-danger"></span>
                </div>
                <div class="form-floating w-100">
                    <input asp-for="Input.Address2" class="form-control" aria-required="true" />
                    <label asp-for="Input.Address2"></label>
                    <span asp-validation-for="Input.Address2" class="text-danger"></span>
                </div>
                <div class="form-floating w-100">
                    <input asp-for="Input.City" class="form-control" aria-required="true" />
                    <label asp-for="Input.City"></label>
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
            </div>

            <div class="d-inline-flex justify-content-between w-100 gap-3 mb-3">
                <div class="form-floating w-100">
                    <select asp-for="Input.Parish" asp-items="@(new SelectList(Model.Parishes, "Id", "Name"))" class="form-control" aria-required="true"></select>
                   <label asp-for="Input.Parish"></label> 
                   <span asp-validation-for="Input.Parish" class="text-danger"></span>
                </div>

                <div class="form-floating w-100">
                    <input asp-for="Input.DateJoined" class="form-control" aria-required="true"  />
                    <label asp-for="Input.DateJoined"></label>
                    <span asp-validation-for="Input.DateJoined" class="text-danger"></span>
                </div>

                <div class="form-floating w-100">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="d-inline-flex justify-content-between w-100 gap-3 mb-3">
                <div class="form-floating w-100">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating w-100">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
