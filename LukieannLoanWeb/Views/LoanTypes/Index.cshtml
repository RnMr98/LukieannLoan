@model IEnumerable<LoanTypeVM>

@{
    ViewData["Title"] = "Index";
}

<div class="container text-center w-100">
    <h1>Loan Types</h1>
</div>

<p>
    <a class="btn btn-success mt-3" asp-action="Create">Create New</a>
</p>

<table class="table w-100">
    <thead>
        <tr class="w-100">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Interest) %
            </th>

            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Interest) %
                </td>

                <td align="right">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <button data-id="@item.Id" class="btn btn-danger deleteBtn" type="button">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<form id="deleteForm" asp-action="Delete">
    <input type="hidden" id="LoanType_ID" name="ID" />
</form>
@section Scripts {

    <script>
        $(function () {

            new DataTable('.table');
            $('.deleteBtn').click(function (e) {
                swal({
                    title: "Are you sure?",
                    text: "Are you sure you want to delete this record?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true
                }).then((confirm) => {
                    if (confirm) {
                        var btn = $(this);
                        var id = btn.data("id");
                        $('#LoanType_ID').val(id);
                        $('#deleteForm').submit();
                    }

                });

            });
        });
    </script>
}

