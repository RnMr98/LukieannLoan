@model LoanTypeVM

@{
    ViewData["Title"] = "Edit";
}

<div class="container text-center w-100">
    <h1>Edit Loan Type</h1>
</div>

<br />
<hr />
<div class="row">
    <div class="col-md-12 ">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <label asp-for="Interest" class="control-label"></label>
                <input asp-for="Interest" class="form-control " type="number">
                <span asp-validation-for="Interest" class="text-danger"></span>

            </div>
            <br />

            <br />
            <input type="hidden" asp-for="Id" />

            <div class="form-group container d-inline-flex justify-content-around align-content-center border-top">
                <input type="submit" value="Save" class="btn btn-primary mt-3" />
                <a class="btn btn-warning mt-3" asp-action="Index">Back to List</a>

            </div>
        </form>
    </div>
</div>

